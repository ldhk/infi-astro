<style lang="scss">
	:root {
		--astro-gradient: linear-gradient(0deg, #2980B9, #6DD5FA, #FFFFFF);
	}

	@keyframes fadeIn {
	0% { 
		opacity: 0; 
		transform: translateY(-10px);
	}
	100% { 
		opacity: 1; 
		transform: translate(0);}
	}

	@keyframes fadetoTop {
	0% { 
		opacity: 0; 
		transform: translateY(10px);
	}
	100% { 
		opacity: 1; 
		transform: translate(0);}
	}

	.fade-in {
		animation: fadeIn linear 500ms;
	}
	.font-Neue {
		font-family: "NeueHaasGroteskText Pro",Arial,Helvetica,sans-serif;
	}

	.pre-text {
		animation: fadetoTop linear 500ms;
	}
	.text-transparent {
		font-family: "NeueHaasGroteskText Pro",Arial,Helvetica,sans-serif;
		-webkit-text-stroke-width: 1px;
    	-webkit-text-stroke-color: black;
		color: transparent;
    	position: relative; 
		
		
		// &:before {
		// content: 'HELLO';
